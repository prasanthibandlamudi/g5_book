        body {
            font-family: Arial, sans-serif;
            background-image: url('img/lock.jpg'); /* Add your background image path */
            background-color: #87ceeb; /* Light sky blue background color */
            background-size: cover;
            background-position: top;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align container to the top */
        }
        .container {
            background-color: rgba(135, 206, 235, 0.7);; /* Light sky blue background color with some transparency */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
            margin-top: 20px; /* Adjust margin top as needed */
        }
        h2 {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Change Password</h2>
        <form action="changePassword" method="post">
            <label for="password">Enter new password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <input type="submit" value="Change Password">
        </form>
    </div>
</body>
